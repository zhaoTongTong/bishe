            //获取list-item
            function getListItem() {
                $.ajax({
                    url: 'getDataList',
                    type: 'GET',
                    datatype: 'json',
                    data: {
                        data: 'parentType'
                    },
                    success: function (result) {
                        result.forEach(function (ele) {
                            $('#listItem').append(
                                `<a class="list-group-item list-item-a" onclick="typePlatform(this,'${ele.id}','${ele.name}')" >${ele.name}<span
                        style="font-size: .8em; margin-right: 5px;"
                        class="glyphicon glyphicon-menu-right navbar-right"></span></a>`
                            )
                        })
                    }
                });
            }
            //end


            //点击list-item触发的事件
            function typePlatform(ele, id, name) {
                //阻止事件冒泡
                var e = window.event;
                if (e.stopPropagation) {
                    e.stopPropagation();
                } else {
                    e.cancelBubble = true;
                }
                //end

                /*取消掉所有list-item的active属性*/
                $('.list-item-a').removeClass('active');

                /*给当前list-item加active属性*/
                $(ele).addClass('active');

                //list-details显示
                $('#list-details').css({
                    display: 'block'
                });
                $.ajax({
                    url: '/prod/getBrandListByTypeId',
                    type: 'GET',
                    datatype: 'json',
                    data: {
                        data: 'brand',
                        pid: id
                    },
                    success: function (result) {
                        if (result && result.length > 0) {
                            var html = '';
                            for (var i = 0; i < result.length; i++) {
                                var o = result[i];
                                html +=
                                    `<a href="/prod/list?type=${name}&brand=${o.name}&data=product">${o.name}</a>&nbsp;&nbsp;`;
                            }
                            $('#list-details').html(html);
                        }
                    }
                });
            }
            //end
        </script>
