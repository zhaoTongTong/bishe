<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel = "Shortcut Icon" href="images/favicon.ico">
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    <script src="/javascripts/jquery-1.7.2.min.js"></script>
  </head>

  <style>
    html, body {
      height: 100%;
      width: 100%;
    }
  </style>

  <script>
    function reloadFrame() {
      document.getElementById('iframe').contentWindow.location.reload(true);
    }
  </script>

  <body>
  <div class="container-fluid" style="height: 100%">
    <div class="row">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" style="color: #2e6da4; font-size: 1.8em" href="#">维修精灵</a>
          </div>
          <div class="collapse navbar-collapse navbar-right" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li class="active"><a href="#">INFO <span class="sr-only">(current)</span></a></li>
              <li><a href="#">LIST</a></li>
              <li><a href="#">TYPE</a></li>
              <li><a href="#">EDIT</a></li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <div class="row" style="height: 88%;">
      <div class="col-xs-2">
        <div class="list-group" id="list-group">
          <a href="#" class="list-group-item active">TYPE</a>
          <a href="#" class="list-group-item">BRAND</a>
          <a href="#" class="list-group-item">PRODUCT</a>
          <a href="#" class="list-group-item">EDIT</a>
        </div>
      </div>
      <div class="col-xs-10" style="height: 100%">
        <iframe id="iframe" src="getType" frameborder="0" width="100%" height="100%" scrolling="no"></iframe>
      </div>
    </div>
  </div>

  <script>
    var listArray = $('#list-group a');
    var srcArray = ['getType', 'getBrand']

    //首先将类数组对象转换成数组
    $.makeArray(listArray).forEach(function(element, index) {
      element.onclick = function(){
        $.makeArray(listArray).forEach(function(element) {
          $(element).removeClass('active');
        });

        $('#iframe').attr({src: srcArray[index]});
        $(element).addClass('active');
      }
    })

  </script>
  </body>
</html>
